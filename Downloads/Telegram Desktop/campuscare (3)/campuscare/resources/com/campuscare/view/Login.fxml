<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.campuscare.controller.LoginController"
      alignment="CENTER" spacing="20" styleClass="login-container"
      prefWidth="800" prefHeight="600">
    
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    
    <Text text="Campath" styleClass="title"/>
    
    <VBox spacing="15" maxWidth="350" styleClass="login-form-card">
        <Label text="ID" styleClass="form-label"/>
        <TextField fx:id="usernameField" promptText="Enter your ID" styleClass="form-field" onAction="#handleLogin"/>
        
        <Label text="Password" styleClass="form-label"/>
        <HBox spacing="5" alignment="CENTER_LEFT">
            <TextField fx:id="passwordVisible" promptText="Enter password" styleClass="form-field" managed="false" visible="false" HBox.hgrow="ALWAYS" onAction="#handleLogin"/>
            <PasswordField fx:id="passwordField" promptText="Enter password" styleClass="form-field" HBox.hgrow="ALWAYS" onAction="#handleLogin"/>
            <Button fx:id="togglePasswordBtn" text="ðŸ‘" onAction="#togglePassword" styleClass="toggle-btn"/>
        </HBox>
        
        <Label fx:id="errorLabel" styleClass="error-label" textFill="red" wrapText="true"/>
        
        <Button text="Login" onAction="#handleLogin" styleClass="primary-button" maxWidth="Infinity" defaultButton="true"/>
        
        <HBox alignment="CENTER" spacing="10">
            <Label text="Forgot password?" styleClass="link-label" onMouseClicked="#handleForgotPassword"/>
        </HBox>
    </VBox>
    
    
    <Text text="Default: admin/admin123 or 1892/16/pass123" styleClass="hint-text"/>
</VBox>
